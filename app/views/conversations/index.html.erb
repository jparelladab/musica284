<h1>My Conversations</h1>

<ul>
  <% @conversations.each do |conversation| %>
    <li>
      <%= link_to fullname(conversation.recipient(current_user)), conversation_messages_path(conversation) %>
      <% if !conversation.unread_message_count(current_user).zero? %>
        (<%= conversation.unread_message_count(current_user) %>)
      <% end %>
    </li>
  <% end %>
</ul>


<h2>Users</h2>
<ul>
  <% @users.each do |user| %>
    <li><%= button_to fullname(user), conversations_path, params: {sender_id: current_user.id, receiver_id: user.id}, method: :post %></li>
  <% end %>
</ul>


