<div class="conversations-container">

  <% @conversations.each do |conversation| %>
    <div class="conversation">
      <div class="conversation-avatar"><%= cl_image_tag find_avatar(conversation_other(conversation)), class: 'photo-fit' %></div>
      <%= link_to fullname(conversation.recipient(current_user)), conversation_messages_path(conversation) %>
      <% if !conversation.unread_message_count(current_user).zero? %>
        <span style="background-color: lightgreen;">(<%= conversation.unread_message_count(current_user) %>)</span>
      <% end %>
    </div>
  <% end %>

  <% @users.each do |user| %>
    <p><%= button_to fullname(user), conversations_path, params: {sender_id: current_user.id, receiver_id: user.id}, method: :post %></p>
  <% end %>



</div>
