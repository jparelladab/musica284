<div class="home-container">

<div class="home-title"><h1>My Conversations</h1></div>
  <% @conversations.each do |conversation| %>
    <p>
      <%= link_to fullname(conversation.recipient(current_user)), conversation_messages_path(conversation), class: "btn btn-primary" %>
      <% if !conversation.unread_message_count(current_user).zero? %>
        <span style="background-color: lightgreen;">(<%= conversation.unread_message_count(current_user) %>)</span>
      <% end %>
    </p>
  <% end %>

<div class="home-title"><h2>Send a message to any of this users!</h2></div>

  <% @users.each do |user| %>
    <p><%= button_to fullname(user), conversations_path, params: {sender_id: current_user.id, receiver_id: user.id}, method: :post %></p>
  <% end %>



</div>
