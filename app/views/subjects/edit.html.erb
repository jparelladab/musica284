<h1>Edit Subject</h1>
<div class="container">
  <%= simple_form_for(@subject, url: subject_path, method: :patch) do |f| %>
    <%= f.input :name, :as => :string%>
    <%= f.input :description, :as => :string %>
    <%= f.input :level_id, collection: Level.all %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Save" %>
  <% end %>
</div>
