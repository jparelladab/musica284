<div class="title">My subjects</div>
  <div class="card-container">
    <% if @my_subjects.any? %>
      <% @my_subjects.each do |subject| %>
        <div class="card">
          <div class="card-photo">
            <%= cl_image_tag find_photo(subject) %>
          </div>
          <div class="card-info">
            <p><%= link_to subject.name, subject_path(subject)%></p>
            <p><%= subject.description %></p>
            <p><%= subject.rating %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="title">Other Subjects of My level</div>
  <div class="card-container">
    <% @other_subjects.each do |subject| %>
      <div class="card">
        <div class="card-photo">
          <%= cl_image_tag find_photo(subject) %>
        </div>
        <div class="card-info">
          <p><%= link_to subject.name, subject_path(subject)%></p>
          <p><%= subject.description %></p>
          <p><%= subject.rating %></p>
          <p><%= button_to "Take this subject", workloads_path, params: { subject_id: subject.id}, method: :post %></p>
        </div>
      </div>
    <% end %>
  </div>
  <p><%= link_to "Add New subject", new_subject_path %></p>
</div>

