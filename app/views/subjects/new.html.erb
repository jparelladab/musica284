<h1>New Subject</h1>
<div class="container">
  <%= simple_form_for(@subject, url: subjects_path) do |f| %>
    <%= f.input :name, :as => :string%>
    <%= f.input :description, :as => :string %>
    <%= f.input :level_id, collection: Level.all %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Add Subject" %>
  <% end %>
</div>
