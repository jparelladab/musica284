<div class="videos-info">Check out my favorite videos!</div>
<% if params[:user_id] == current_user.id.to_s %>
  <%= link_to "Add video", "#", "data-toggle" => "modal", "data-target" => '#myModal', class: 'btn btn-primary btn-lg add-video-btn' %>
  <%= render partial: 'new' %>
<% end %>

  <% @user_videos.each do |video| %>
    <div class="videocard">
      <div class="videocard-video">
        <%= render_youtube_video video.url %>
      </div>
      <div class="videocard-info">
        <p><%= video.title %></p>
        <p><%= video.description %></p>

      </div>
    </div>
  <% end %>
