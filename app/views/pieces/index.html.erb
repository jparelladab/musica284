<div class="title">Index of pieces</div>
<div class="pieces-index-container">
  <% @pieces.each do |piece| %>
  <div class="pieces-index-card">
    <div class="pieces-card-photo">
      <%= cl_image_tag find_photo(piece), class: "photo-fit" %>
    </div>
    <div class="pieces-card-info">
      <p><%= link_to piece.name, piece_path(piece) %> - <%= link_to piece.composer.name, composer_path(piece.composer) %></p>
      <p><%= link_to piece.level.name, level_path(piece.level) %></p>
      <p><%= piece.description %></p>
      <p>Rating: <%= piece.rating %></p>
    </div>
    <p><%= button_to "Add to my repertoire", repertoires_path, params: {piece_id: piece.id}, method: :post %></p>
  </div>
  <% end %>
</div>
  <p><%= link_to "Home", root_path %></p>
  <p><%= link_to "New piece", new_piece_path %></p>
