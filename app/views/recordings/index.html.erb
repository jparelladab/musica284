<div class="title">Index of Recordings</div>
<div class="card-container">
  <% @all_recordings.each do |recording| %>
    <div class="card">
      <div class="card-video">
        <%= youtube_video recording.url %>
      </div>
      <div class="card-info">
        <p><%= link_to recording.title, recording %></p>
        <p>Uploaded by: <%= link_to fullname(recording.user), user_path(recording.user) %></p>
        <p><%= recording.description %></p>
        <p>Rating: <%= recording.votes %></p>
      </div>
    </div>
  <% end %>
</div>
<p><%= link_to "New recording", new_piece_path %></p>
