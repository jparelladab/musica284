<div class="title">My Recordings</div>
<div class="card-container">
  <% @my_recordings.each do |recording| %>
    <div class="card">
      <div class="card-photo">
        <%= cl_image_tag find_photo(recording), class: "photo-fit" %>
      </div>
      <div class="card-info">
        <p><%= link_to recording.title, recording %></p>
        <p><%= link_to fullname(recording.user), user_path(recording.user) %></p>
        <p><%= recording.description %></p>
        <p>Rating: <%= recording.votes %></p>
      </div>
    </div>
  <% end %>
</div>
<p><%= link_to "Home", root_path %></p>
<p><%= link_to "New recording", new_piece_path %></p>
