<h1>New Composer</h1>
<div class="container">
  <%= simple_form_for(@composer, url: composers_path) do |f| %>
    <%= f.input :name, :as => :string%>
    <%= f.input :biography, :as => :string %>
    <%= f.input :rating, collection: (1..5).to_a, label: "Rate this composer" %>
    <%= f.input :avatar, as: :file %>
    <%= f.submit "Add Composer" %>
  <% end %>
</div>
