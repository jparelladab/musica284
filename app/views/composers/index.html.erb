<div class="level-title">Index of Composers</div>
<div class="composer-index-container">
  <% @composers.each do |composer| %>
    <div class="composer-index-card">
      <div class="composer-index-card-photo-container">
        <%= cl_image_tag find_photo(composer) %>
      </div>
      <p>Name: <%= link_to composer.name, composer_path(composer)%></p>
      <p>Biography: <%= composer.biography %></p>
      <p>Rating: <%= composer.rating %></p>
      <p><%= link_to "Edit composer", edit_composer_path(composer) %></p>
    </div>
  <% end %>
</div>
<p><%= link_to "Add New composer", new_composer_path %></p>
