<div class="central-content">
<h1>Search for other users</h1>
  <%= form_with url: follows_path, method: :get do %>
  <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a user" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<div class="network-container">
  <div class="users-grid">
    <% @all_users.each do |usr| %>
      <div class="user-card">
        <div class="card-photo-container">
          <%= cl_image_tag find_avatar(usr), class: "photo-fit" %>
        </div>
        <div class="card-info-container">
          <div class="card-info-name">
            <%= link_to fullname(usr), user_path(usr) %>
          </div>
          <div class="card-info-text">
            <%= usr.introduction %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="right-pane"></div>
