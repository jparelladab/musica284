<% if @user.in?(current_user.followings) %>
  <%= link_to icon('fas', 'user-slash'), follow_path(@user), remote: true, method: :delete, class: "unfollow-btn" %>
<% elsif !@user.in?(current_user.followings) && @user != current_user%>
  <%= link_to icon('fas', 'user'), follows_path(followed: @user), remote: true, method: :post, class: "follow-btn" %>
<% end %>
